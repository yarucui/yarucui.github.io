---
import MainLayout from '/src/layouts/Layout.astro';
import aboutData from '../data/about.json'; // Import your data
---
<MainLayout title="About">
    <div class="about-container">
        <h1 class="serif">About Me</h1>
        
        <p class="bio-statement">{aboutData.statement}</p>

        <div class="grid">
            <section>
                <h3 class="serif">Education</h3>
                {aboutData.education.map(edu => (
                    <div class="item">
                        <strong>{edu.degree}</strong>
                        <span>{edu.school}, {edu.year}</span>
                    </div>
                ))}
            </section>

            <section>
                <h3 class="serif">Research Interests</h3>
                <ul>
                    {aboutData.researchInterests.map(interest => (
                        <li>{interest}</li>
                    ))}
                </ul>
            </section>
        </div>

        <p class="personal-note"><em>{aboutData.personal}</em></p>
    </div>
</MainLayout>

<style>
    .about-container { max-width: 700px; animation: fadeIn 1s ease; }
    .serif { font-family: 'Cormorant Garamond', serif; color: var(--accent); }
    .bio-statement { line-height: 1.8; color: #888; margin-bottom: 3rem; }
    
    .grid { display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; margin-bottom: 3rem; }
    .item { display: flex; flex-direction: column; margin-bottom: 1rem; font-size: 0.9rem; }
    
    ul { padding: 0; list-style: none; font-size: 0.9rem; color: #888; }
    li::before { content: "âœ¦ "; color: var(--accent); }

    .personal-note { border-top: 1px solid var(--border); padding-top: 2rem; color: #666; }
</style>