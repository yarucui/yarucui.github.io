<style>
	:root {
		--bg: #0a0a0a;
		--text: #f0f0f0;
		--accent: #ff2d75; /* 你的高级玫粉 */
	}

	body {
		background: var(--bg);
		color: var(--text);
		font-family: 'Inter', sans-serif;
		margin: 0;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: 100vh;
	}

	nav {
		position: absolute;
		top: 3rem;
		font-family: 'Cormorant Garamond', serif;
		letter-spacing: 0.1em;
	}

	nav a {
		color: var(--text);
		text-decoration: none;
		margin: 0 1.5rem;
		font-size: 1.1rem;
		transition: 0.3s;
	}

	nav a:hover {
		color: var(--accent);
	}

	.profile-container {
		text-align: center;
		animation: fadeIn 1.2s ease-out;
	}

	.avatar {
		width: 120px;
		height: 120px;
		border: 1px solid var(--accent);
		border-radius: 50%;
		margin: 0 auto 2rem;
		background: linear-gradient(45deg, #1a1a1a, #0a0a0a);
	}

	h1 {
		font-family: 'Cormorant Garamond', serif;
		font-size: 2.8rem;
		font-weight: 500;
		margin: 0;
	}

	.tagline {
		color: #888;
		font-size: 0.9rem;
		margin-top: 0.5rem;
	}

	.social-links {
		margin-top: 4rem;
	}

	.social-links a {
		color: #666;
		text-decoration: none;
		margin: 0 1rem;
		font-size: 0.8rem;
		text-transform: uppercase;
		letter-spacing: 2px;
		transition: 0.3s;
	}

	.social-links a:hover {
		color: var(--accent);
	}

	@keyframes fadeIn {
		from { opacity: 0; transform: translateY(10px); }
		to { opacity: 1; transform: translateY(0); }
	}
</style>